@model IEnumerable<EntityLayer.Concrete.Comment>

@if (Model.Count() != 0)
{
    <div class="comment-top">
        <h4>Yorumlar (@Model.Count())</h4>
        <div class="media">
            <div class="media-body">
                @foreach (var item in Model)
                {
                    <div class="media mt-3">
                        <a class="d-flex pr-3" href="#">
                            <img alt="imagen aleatoria" src="https://picsum.photos/90?random" class="img-fluid" />
                        </a>
                        <div class="media-body">
                            <h5 class="mt-0">@item.CommentUserName</h5>
                            <h6>@item.CommentTitle</h6>
                            <p>@item.CommentContent</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

else
{
    <h4 class="breadcrumb-item active mt-4">
        <i class="far fa-comment">
            Bu blogta henüz bir yorum yapılmamış.İlk yorumu siz yazın.
        </i>
    </h4>
}
